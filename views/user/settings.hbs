<div class="header">
  <div class="logo">
    <a href="/user/profile" class="go-back">Go Back</a>
  </div>
  <div class="navigation">
    <form id="logout-form" action="/logout" method="POST">
      <button>Logout</button>
    </form>
  </div>
</div>
<h1>Hi <span>{{currentUser.username}}</span> here you can update your profile</h1>

<div class="form-input">
  <div class="update-info">
    <form action="/user/general-settings" method="POST">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" value={{currentUser.username}}>
      <label for="email">email:</label>
      <input type="email" id="email" name="email" value={{currentUser.email}}>
      <label for="about">About Me:</label>
      <textarea name="about" id="about" cols="50" rows="10">{{currentUser.about}}</textarea>
      <label for="location">Country:</label>
      <input type="location" id="location" name="location" value={{currentUser.location}}>
      <button type="submit">Submit</button>
    </form>
    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
  </div>

  <div class="update-password">
    <form action="/user/updatePassword" method="POST">
      <label for="oldPassword">Old password:</label>
      <input type="password" id="oldPassword" name="oldPassword">
      <label for="password">New password:</label>
      <input type="password" id="password" name="newPassword">
      <label for="repeatPassword">Repeat new password:</label>
      <input type="password" id="repeatPassword" name="repeatPassword">
      <button type="submit">Submit</button>
    </form>
    {{#if updateMessageP}}
    <p class="errorP">{{updateMessageP}}</p>
    {{/if}}
    {{#if errorMessageP}}
    <p class="errorP">{{errorMessageP}}</p>
    {{/if}}
  </div>
</div>


<form id="delete" action="/user/delete-account">

  <button>Delete Account <i class="fas fa-exclamation"></i></button>
</form>