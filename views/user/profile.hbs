<div class="header">
  <div class="logo">
      <a href="/"><img src="../../images/logo.png" alt="Logo check me in "></a>
  </div>
  <div class="navigation">
    <a href="/">Home page</a>
    <a href="/user/newpost"> New story</a>
    <a href="/user/settings">Settings</a>
    <form id="logout-form" action="/logout" method="POST">
      <button>Logout</button>
    </form>
  </div>
</div>
<div class="index-body">
  <h1>Welcome to your profile <br>{{currentUser.username}}</h1>
  <div class="profile-body">
  <div class="profile-details">  
    <img src="{{currentUser.Picture}}" alt="profile picture">
    <form action="/user/upload-profile-picture" method="POST" enctype="multipart/form-data">
      <label for="Picture">Update Profile Picture</label>
      <input type="file" name="Picture" id="Picture" accept="image/png, image/jpg">
      <br>
      <button type="submit">Submit</button>
    </form>
    {{#if errorMessagepic}}
    <p>{{errorMessagepic}}</p>
    {{/if}}
    <div class="bio">
      <h3>Location</h3>
      <p>{{currentUser.location}}</p>
      <h3>About me</h3>
      <p>{{currentUser.about}}</p>
    </div>
  </div>
  <div class="my-post">
  <h2>My Recent Posts</h2>
  {{#each currentUser.posts}}
  <div class="featured">
    <h3>{{title}}</h3><br>
    <h4>{{country}}-{{city}}</h4>
    <h5>{{description}}</h5>
    <div>
     <button><a href="/post/edit/{{_id}}">Edit Post</a></button> 
      <button><a class="readme" href="/user/readmore/{{slug}}">Read full post</a></button>
    </div>
  </div>
  {{/each}}
</div>
</div>
</div>