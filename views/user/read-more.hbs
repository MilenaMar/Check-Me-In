<div class="trip-info">
  <div>
    <h1>{{post.title}}</h1>
    <h2>by {{post.author.username}}</h2>
    <h3>Country: {{post.country}}</h3>
  </div>
  <div>
    <h5>Date of the trip: <span id="date">{{treatedDate}}</span></h5>
    <h5>Cities visited: {{post.city}}</h5>
    <h5>Budget: {{post.budget}} {{post.currency}}</h5>
    <h5>{{post.days}} days</h5>
  </div>
</div>
<h3>{{post.description}}</h3>
<div class="post-body">
  <p>{{post.body}}</p>
  <img src={{post.image}} alt="trip image">
</div>