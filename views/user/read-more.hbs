<div class="header">
  <div class="logo">
    <a href="/"><img src="../../images/logo.png" alt="Logo check me in "></a>
  </div>
  <div class="navigation">
    <a href="/">Home page</a>
    <a href="/user/profile">My profile</a>
    <a href="/posts" class="go-back">Galery</a>
    <form id="logout-form" action="/logout" method="POST">
      <button>Logout</button>
    </form>
  </div>
</div>
<div class="index-body">
<div class="trip-info">
    <h1>{{post.title}}</h1>
    <h2>by {{post.author.username}}</h2>
    <h3>Country: {{post.country}}</h3>
    <div class="trip-details">
    <p>Date of the trip: <span id="date">{{treatedDate}}</span></p>
    <p>Cities visited: {{post.city}}</p>
    <p>Budget: {{post.budget}} {{post.currency}}</p>
    <p>{{post.days}} days</p>
    </div>
  <h3>{{post.description}}</h3>
  <p>{{post.body}}</p>
  <img src={{post.image}} alt="trip image">
</div>
</div>